@page
@using Task_Management_System.Utility
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="row justify-content-center">
        <div class="col-5 mt-1">
            <div class="card">
                <div class="card-header">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="card-header bg-gradient text-bg-dark"><h2 class="text-center font-weight-light my-4">@ViewData["Title"]</h2></div>
                        <h5>Create a new account.</h5>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-2">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email *</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-2">
                            <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="Name" />
                            <label asp-for="Input.Name">Name *</label>
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-2 ">
                            <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="PhoneNumber" />
                            <label asp-for="Input.PhoneNumber">PhoneNumber</label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-2 ">
                            <input asp-for="Input.StreetAddress" class="form-control" aria-required="true" placeholder="StreetAddress" />
                            <label asp-for="Input.StreetAddress">StreetAddress</label>
                            <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-2 ">
                            <input asp-for="Input.City" class="form-control" aria-required="true" placeholder="City" />
                            <label asp-for="Input.City">City</label>
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-2 ">
                            <input asp-for="Input.State" class="form-control" aria-required="true" placeholder="State" />
                            <label asp-for="Input.State">State</label>
                            <span asp-validation-for="Input.State" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-2 ">
                            <input asp-for="Input.PostalCode" class="form-control" aria-required="true" placeholder="PostalCode" />
                            <label asp-for="Input.PostalCode">PostalCode</label>
                            <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-2">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Password *</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-2">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password *</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 ">
                            <label asp-for="Input.Role" aria-required="false">Role *</label>
                            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class=form-select>
                                <option disabled selected>-Select Role-</option>
                            </select>
                        </div>
                        @* <div class="form-floating py-2">
                            <label asp-for="Input.Team_Id" class="control-label"></label>
                            <textarea asp-for="Input.Team_Id" class="form-control"></textarea>
                            <span asp-validation-for="Input.Team_Id" class="text-danger"></span>
                        </div> *@
                        <div class="form-floating py-2 ">
                            <label asp-for="Input.Team_Id">Team *</label>
                            <select asp-for="Input.Team_Id" asp-items="@Model.Input.TeamsList" class="form-select">
                                <option disabled selected>--Select Team--</option>
                            </select>
                            <span asp-validation-for="Input.Team_Id" class="text-danger"></span>
                        </div>  
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
